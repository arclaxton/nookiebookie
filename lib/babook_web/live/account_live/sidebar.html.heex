<div id="accounts">
	<%= for account <- @accounts do %>
	<div id={"account-#{account.id}"} class="account-item">
		<span><%= account.name %></span>
		<span><%= account.owner %></span>
		<span class="edit"><%= live_patch "ðŸ–‰", to: Routes.account_index_path(@socket, :edit, account), class: "edit" %></span>
	</div>
	<% end %>
	<span><%= live_patch "Add Account", to: Routes.account_index_path(@socket, :new) %></span>

</div>

<style>
.account-item {
	margin: 5px;
	display: flex;
	justify-content: space-between;
}
</style>