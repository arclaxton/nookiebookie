<div class="top"><h1>Transactions</h1></div>

<%= if @live_action in [:new, :edit] do %>
	<.modal return_to={Routes.transaction_index_path(@socket, :index)}>
		<.live_component
			module={BabookWeb.TransactionLive.FormComponent}
			id={@transaction.id || :new}
			title={@page_title}
			action={@live_action}
			transaction={@transaction}
			return_to={Routes.transaction_index_path(@socket, :index)}
		/>
	</.modal>
<% end %>

<table>
	<thead>
		<tr>
			<th>Account</th>
			<th>Amount</th>
			<th>Transfer</th>
			<th>Merchant</th>
			<th>Category</th>
			<th>Budget allocation</th>

			<th></th>
		</tr>
	</thead>
	<tbody id="transactions">
		<%= for transaction <- @transactions do %>
			<tr id={"transaction-#{transaction.id}"}>
				<td><%= transaction.account %></td>
				<td><%= transaction.amount %></td>
				<td><%= transaction.transfer %></td>
				<td><%= transaction.merchant %></td>
				<td><%= transaction.category %></td>
				<td><%= transaction.budget_allocation %></td>

				<td>
					<span class="edit"><%= live_patch "ðŸ–‰", to: Routes.transaction_index_path(@socket, :edit, transaction), class: "edit" %></span>

					<span><%= link "ðŸ—‘", to: "#", phx_click: "delete", phx_value_id: transaction.id, data: [confirm: "Are you sure?"], class: "delete" %></span>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>

<span><%= live_patch "New Transaction", to: Routes.transaction_index_path(@socket, :new) %></span>
<style>
	thead {
		display: block;
	}
	#transactions {
		background-color: var(--nord1);
		height: 70vh;
		width: 100%;
		overflow-y: scroll;
		display: block;
	}
	main.container {
		margin: 0 !important;
		min-width: 100%;
		max-height: 90vh;
	}
	th, td {
		width: 20%;
	}

	tr:nth-child(2n) {
		background-color: var(--nord3);
	}
</style>